{
  "name": "tahoe-executor",
  "version": "1.0.0",
  "description": "Tahoe Executor - Opiumware Script Interface",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --x64",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:universal": "electron-builder --mac --universal",
    "dev": "electron . --dev"
  },
  "keywords": [
    "executor",
    "opiumware",
    "scripting"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "sharp": "^0.34.4",
    "svg2png-many": "^0.0.7"
  },
  "build": {
    "appId": "com.tahoe.executor",
    "productName": "Tahoe",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dir",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "extendInfo": {
        "LSUIElement": false,
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeExtensions": [
              "lua"
            ],
            "CFBundleTypeName": "Lua Script",
            "CFBundleTypeRole": "Editor"
          }
        ]
      }
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
